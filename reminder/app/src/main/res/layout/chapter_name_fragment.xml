<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/header_sura_name_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al Fatihah"
                android:textSize="25dp"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textColor="@color/chapter_name_text"
                android:shadowColor="@color/chapter_name_shadow"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:layout_marginTop="-8dp"/>

        <com.sc.rotd.app.view.CustomTextView
                android:id="@+id/header_sura_name_arabic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                style="@style/arabic_aya_saleem"
                android:textSize="30dp"
                android:text="سورة الفاتحة"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/chapter_name_text"
                android:shadowColor="@color/chapter_name_shadow"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:layout_marginTop="-8dp"/>
    </LinearLayout>

    <TextView
            android:id="@+id/header_sura_name_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Opener - Sura chapter: 1"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/chapter_name_text"
            android:shadowColor="@color/chapter_name_shadow"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:layout_marginTop="-8dp"/>

    <TextView
            android:id="@+id/reminder_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="January 25, 2015"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/chapter_name_text"
            android:shadowColor="@color/chapter_name_shadow"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            android:layout_marginBottom="5dp"/>

    <!--
    <TextView
            android:id="@+id/header_sura_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15dp"/>
            -->

</LinearLayout>
