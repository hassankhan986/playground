<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity" >

            <Button
                android:id="@+id/buttonShowAllItems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Show All Items" />

            <Button
                android:id="@+id/buttonAddItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonShowAllItems"
                android:layout_below="@+id/buttonShowAllItems"
                android:text="Add Item" />

            <Button
                android:id="@+id/buttonRemoveItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonAddItem"
                android:layout_below="@+id/buttonAddItem"
                android:text="Remove Item" />

            <Button
                android:id="@+id/buttonUpdateItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonRemoveItem"
                android:layout_below="@+id/buttonRemoveItem"
                android:text="Update Item" />

            <Button
                android:id="@+id/buttonFindItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/buttonUpdateItem"
                android:layout_below="@+id/buttonUpdateItem"
                android:text="Find Items" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>