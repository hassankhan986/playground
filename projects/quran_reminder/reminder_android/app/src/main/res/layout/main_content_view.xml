<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/main_content_view">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <View android:layout_width="match_parent"
              android:layout_height="88dp"
              android:background="@drawable/chapter_name_background"/>

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:src="@drawable/chapter_name_background_image"
                android:scaleType="fitXY"/>

        <FrameLayout
                android:id="@+id/chapter_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </FrameLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/reminder_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/view_pager_background"/>

    <LinearLayout
            android:layout_marginTop="-5dp"
            android:id="@+id/page_pointer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"/>
</LinearLayout>