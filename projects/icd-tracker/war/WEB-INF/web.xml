<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<filter-class>com.sc.icd.web.AuthenticationFilter</filter-class>
		<init-param>
			<param-name>noAuthUrls</param-name>
			<param-value>adminuser,_ah/admin</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>com.sc.icd.web.HomeController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminController</servlet-name>
		<servlet-class>com.sc.icd.web.AdminController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ActivitiesController</servlet-name>
		<servlet-class>com.sc.icd.web.ActivitiesController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AttendeeController</servlet-name>
		<servlet-class>com.sc.icd.web.AttendeeController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminController</servlet-name>
		<url-pattern>/adminuser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HomeController</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ActivitiesController</servlet-name>
		<url-pattern>/activities</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AttendeeController</servlet-name>
		<url-pattern>/attendee</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>home</welcome-file>
	</welcome-file-list>
</web-app>
