    <color name="chapter_name_bg_top">#ff8f9d4a</color>
    <color name="chapter_name_bg_bottom">#ff70733e</color>
    <color name="view_pager_bg_gradient_top">#fff7ffd8</color>
    <color name="view_pager_bg_gradient_bottom">#FEFEFE</color>
    <color name="setting_divider">#999</color>
    <color name="chapter_name_shadow">#222</color>
    <color name="chapter_name_text">#FFF</color>
    <color name="loading_text_color">#222</color>
    <color name="pointer_on">#994DAA57</color>
    <color name="pointer_off">#99999999</color>
    <color name="translation_spinner_text">#FFF</color>
