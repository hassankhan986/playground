    <color name="setting_reminder_time_text">#093</color>
    <color name="setting_reminder_time_shadow">#A3FFA3</color>

    <style name="AppTheme" parent="AppTheme.Base">
    </style>


    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/theme_primary_text</item>
        <item name="android:textColorSecondary">@color/theme_secondary_text</item>
        <item name="android:windowBackground">@color/theme_window_background</item>
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>


    <style name="arabic_aya_me_quran">
        <item name="fontName">me_quran.ttf</item>
    </style>

    <style name="arabic_aya_saleem">
        <item name="fontName">saleem.ttf</item>
    </style>

    <style name="setting_label_icon">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="setting_label">
        <item name="android:textColor">@color/setting_label_text</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>


    <style name="digital_clock">
        <item name="android:textColor">@color/setting_reminder_time_text</item>
        <item name="android:textSize">10dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="digital_clock_large" parent="digital_clock">
        <item name="android:shadowColor">@color/setting_reminder_time_shadow</item>
        <!--
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
        -->
        <item name="android:textSize">30dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>


</resources>