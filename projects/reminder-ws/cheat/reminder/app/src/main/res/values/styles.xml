    <color name="theme_window_background">#4DAA57</color>
    <color name="theme_primary">#4DAA57</color>
    <color name="theme_primary_dark">#ff428442</color>
    <color name="theme_accent">#093</color>
    <color name="theme_primary_text">#FFF</color>
    <color name="theme_secondary_text">#FFF</color>
    <color name="aya_number_oval_bg">#4DAA57</color>
    <color name="aya_number_text">#FFF</color>
